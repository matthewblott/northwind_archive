@model CustomerModalViewModel

<div class="modal is-active">
  
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">@Model.Title</p>
    </header>
    <section class="modal-card-body">
      <div class="content">
        <form method="post" id="modal__form-@Model.ElementId">
          <input type="hidden" name="ReturnUrl" value="@EncodedUrl">
          <nw-field nw-is-validation="true" asp-for="Id" />
          <nw-field nw-is-validation="true" asp-for="CompanyName" />
          <nw-field nw-is-validation="true" asp-for="Region" />
        </form>
      </div>
    </section>
    <footer class="modal-card-foot">
      
      @if (Model.IsNew)
      {
        <button asp-controller="Customers" asp-action="CreatePartial" class="button is-success" form="modal__form-@Model.ElementId">@Model.SaveText</button>
      }
      else
      {
        <button asp-controller="Customers" asp-action="UpdatePartial" class="button is-success" form="modal__form-@Model.ElementId">@Model.SaveText</button>
      }

      <label class="button" for="modal__button-@Model.ElementId-2">Cancel</label>
      <input name="modal-toggle" type="radio" class="is-nowidth" id="modal__button-@Model.ElementId-2">
    </footer>
  </div>
</div>

@functions{

  string EncodedUrl => Context.Request.GetEncodedUrl();

}
