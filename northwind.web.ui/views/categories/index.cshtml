@inject IMapper Mapper
@model IndexViewModel<CategoryServiceModel>

<table class="table is-striped is-hoverable is-fullwidth">
  <tr>
    <th scope="col" nw-column="Id" asp-controller="Categories" nw-page="@Model.Pager.PageNumber"
        nw-order="@Model.OrderBy" nw-descending="@Model.IsDescending">
    </th>
    <th scope="col" nw-column="CategoryName" asp-controller="Categories" nw-order="@Model.OrderBy"
        nw-page="@Model.Pager.PageNumber" nw-caption="Company" nw-descending="@Model.IsDescending">
    </th>
    <th scope="col" nw-column="Description" asp-controller="Categories" nw-page="@Model.Pager.PageNumber"
        nw-order="@Model.OrderBy" nw-descending="@Model.IsDescending">
    </th>
    <th scope="col">
      <a asp-action="New">
        <i class="fa fa-plus"></i>
      </a>
    </th>
  </tr>

  @foreach (var item in Model.Data)
  {
    <tr>
      <td>
        @item.Id
      </td>
      <td>
        @item.CategoryName
      </td>
      <td>
        @item.Description
      </td>
      <td>
        <a asp-action="Show" asp-route-id="@item.Id">
          <i class="fa fa-eye"></i>
        </a>
      </td>
    </tr>
  }

</table>

<nw-pager
  cs-paging-pagenumber="@Model.Pager.PageNumber"
  cs-paging-pagesize="@Model.Pager.PageSize"
  cs-paging-totalitems="@Model.Pager.TotalItems"
  asp-controller="Categories"
  asp-action="Index"
  nw-query-values="@Model.QueryValues"
  nw-order="@Model.OrderBy"
  nw-descending="@Model.IsDescending">
</nw-pager>